{
  "realm": "bookstore",
  "enabled": true,
  "displayName": "Book Store",
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": false,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 30,
  "defaultSignatureAlgorithm": "RS256",
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "refreshTokenMaxReuse": 0,
  "revokeRefreshToken": false,
  "roles": {
    "realm": [
      {
        "name": "customer",
        "description": "Regular book store customer"
      },
      {
        "name": "admin",
        "description": "Book store administrator"
      }
    ]
  },
  "clients": [
    {
      "clientId": "ui-client",
      "name": "Book Store UI",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "redirectUris": [
        "http://myecom.net:30000/*",
        "http://myecom.net:30000/callback",
        "http://localhost:30000/*",
        "http://localhost:30000/callback"
      ],
      "webOrigins": [
        "http://myecom.net:30000",
        "http://localhost:30000"
      ],
      "defaultClientScopes": [
        "openid",
        "profile",
        "email",
        "roles"
      ]
    },
    {
      "clientId": "ecom-service",
      "name": "E-Commerce Service",
      "enabled": true,
      "publicClient": false,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "protocol": "openid-connect",
      "secret": "REPLACE_ECOM_SERVICE_SECRET",
      "defaultClientScopes": [
        "openid",
        "profile",
        "email",
        "roles"
      ]
    },
    {
      "clientId": "inventory-service",
      "name": "Inventory Service",
      "enabled": true,
      "publicClient": false,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "protocol": "openid-connect",
      "secret": "REPLACE_INVENTORY_SERVICE_SECRET",
      "defaultClientScopes": [
        "openid",
        "profile",
        "email",
        "roles"
      ]
    }
  ],
  "users": [
    {
      "username": "user1",
      "email": "user1@bookstore.local",
      "firstName": "Book",
      "lastName": "Customer",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "REPLACE_USER1_PASSWORD",
          "temporary": false
        }
      ],
      "realmRoles": [
        "customer"
      ]
    },
    {
      "username": "admin1",
      "email": "admin1@bookstore.local",
      "firstName": "Store",
      "lastName": "Admin",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "REPLACE_ADMIN1_PASSWORD",
          "temporary": false
        }
      ],
      "realmRoles": [
        "customer",
        "admin"
      ]
    }
  ],
  "clientScopes": [
    {
      "name": "roles",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true"
      },
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "claim.name": "roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "access.token.claim": "true",
            "id.token.claim": "true"
          }
        }
      ]
    }
  ],
  "attributes": {
    "frontendUrl": "http://idp.keycloak.net:30000"
  }
}